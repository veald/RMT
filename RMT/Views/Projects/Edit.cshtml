@model RMT.Models.Project

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Modifier un projet</h2>

<div>
    <span class="glyphicon glyphicon-backward"></span> @Html.ActionLink("Retour", "Index")
</div>

<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
