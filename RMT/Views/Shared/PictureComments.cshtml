@model IEnumerable<RMT.Models.Comment>

@{
    ViewBag.Title = "Index";
}

<h5>Commentaires : </h5>

@foreach (var item in Model)
{
    <p>
        <div style="background-color: rgba(0,0,0,0.1);">
            <b>@Html.DisplayFor(modelItem => item.UserName)</b> [@Html.DisplayFor(modelItem => item.CreatedDate)]
        </div>
        <div style="padding-left: 20px; background-color: rgba(0,0,0,0.1);">
            @Html.DisplayFor(modelItem => item.Body)
            @if (User.IsInRole("Admin"))
            {
                <div style="font-size: 9px;">
                    @Html.ActionLink("Modifier", "../Comments/Edit", new { id = item.CommentId }) |
                    @Html.ActionLink("Masquer", "../Comments/Hide", new { id = item.CommentId }) |
                    @Html.ActionLink("Supprimer", "../Comments/Delete", new { id = item.CommentId })
                </div>
            }
        </div>
    </p>
}




